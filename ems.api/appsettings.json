  },
  /*
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  }*/
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console" ],
    "MinimumLevel": {
      "Default": "Verbose", // Verbose logging level set
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": {
          "path": "logs/log.txt",
          "rollingInterval": "Day"
        }
      }
    ]
  },

  "JWTSettings": {
    "Secret": "YourVerySecureRandomlyGeneratedKeyHere",
    "Issuer": "EMSApp",
    "Audience": "EMSUsers",
    "TokenLifetime": "00:30:00" // Token lifetime, yahan 30 minutes hai
  },
  "AllowedHosts": "*"
}
